<%='No transactions recorded!' if @transactions.length == 0 %>
<% @transactions.each do |transaction| %>
  <table style='border: solid; margin: 10px;' class = transcard>
    <tr>
      <td>Amount: Â£<%= '%.2f' % transaction.amount%></td>
      <td>Date: <%= transaction.time.strftime("%d/%m/%Y")%></td>
      <td>Time: <%= transaction.time.strftime("%-I:%M%p")%></td>
    </tr>
    <tr>
      <td>Vendor: <%= transaction.vendor.name %><br></td>
      <td>Tag:  <%= transaction.tag.name %><br></td>
      <td><a href='/transactions/<%=transaction.id%>'><img width=50px src='/assets/mag.svg'></a></td>
    </tr>
  </table>
<% end %>
