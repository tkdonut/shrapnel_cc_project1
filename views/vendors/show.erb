<div class='contentbox'>
  <table class = transcard>
    <tr>
      <td>Name: <%= @vendor.name %></td>
    </tr>
  </table>
  <hr></hr>
  <div class = 'indexline' id='bottbutts'> 
    <form action = '/vendors', method='GET'>
        <input width = 30px type = 'image' src='/assets/back.png'>
      </form>
    <form <%= "style='display:none'" if Vendor.last? %> action = '/vendors/<%=@vendor.id%>/delete', method='POST'>
      <input  width = 30px type = 'image' src='/assets/trashcan.svg'>
    </form>
    <form action = '/vendors/<%=@vendor.id%>/edit', method='GET'>
      <input  width = 30px type = 'image' src='/assets/edit.svg'>
    </form>
  </div>
    <%= "Cannot delete last vendor" if Vendor.last? %>
</div>
