<div class='contentbox'>
<h1>List of Budgets</h1>
  <% @budgets.each do |budget| %>
    <div class='indexline'>
    <%= Tag.find(budget.tag_id).name %> Budget: £<%= budget.maxspend %><br>
    Currently spent: £<%='%.2f' % Tag.find(budget.tag_id).totaltrans%><br>
     <% bar_percentage = ((Tag.find(budget.tag_id).totaltrans / budget.maxspend) * 100).round(2) %>
     <% bar_percentage = 100 if bar_percentage > 100 %>
    
    </div>
   <div class="wrapper">
			<div class="progress-bar">
        <span class="progress-bar-fill" style="width: <%=bar_percentage%>%;"></span>
			</div>
		</div> 
    <hr></hr>
  <% end %>
  <div class='indexline' id='bottbutts'>
    <a href='budgets/new'> <h3>ADD BUDGET</h2></a>
  </div>
</div>
